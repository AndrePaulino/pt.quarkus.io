"    working_directory: ~/repo\n"
"    environment:\n"
"      MAVEN_OPTS: -Xmx6400m\n"
"      # Set the GRAALVM_HOME env variable to the location where we will be installing GraalVM\n"
"      GRAALVM_HOME: /home/circleci/repo/.graalvm\n"
"    steps:\n"
"      # Checkout the source code\n"
"      # ########################\n"
"      - checkout\n"
